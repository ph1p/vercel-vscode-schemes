{
  "name": "zeit-co-vscode-schemas",
  "displayName": "Vercel Schemes",
  "description": "Add support for JSON Files from vercel.com files",
  "version": "1.0.0",
  "keywords": [
    "zeit",
    "now",
    "now.sh",
    "vercel.com",
    "vercel",
    "zeit.co",
    "schemas",
    "nextjs",
    "config",
    "turborepo"
  ],
  "publisher": "ph1p",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/index.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "packages": "npx @vscode/vsce package",
    "publish": "npx @vscode/vsce publish"
  },
  "contributes": {
    "languages": [
      {
        "id": "vercelignore",
        "extensions": [
          ".vercelignore"
        ],
        "aliases": [
          "Vercel Ignore"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vercelignore",
        "scopeName": "source.ignore",
        "path": "./syntaxes/vercelignore.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "now.json",
          "vercel.json"
        ],
        "url": "https://openapi.vercel.sh/vercel.json"
      },
      {
        "fileMatch": [
          "*.now/config.json",
          "*.vercel/config.json"
        ],
        "url": "./schemas/config.json"
      },
      {
        "fileMatch": [
          "turbo.json"
        ],
        "url": "https://turbo.build/schema.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:json"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ph1p/zeit-co-vscode-schemas/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ph1p/zeit-co-vscode-schemas.git"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "glob": "^11.0.0",
    "typescript": "^5.7.2"
  }
}
